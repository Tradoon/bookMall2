<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tradoon.bookMall.dao.UmsAdminMapper">
    <insert id="insertAdmin">
        insert into ums_admin(
        <trim suffixOverrides=",">
            <if test="username!=null">
                username,
            </if>
            <if test="password!=null">
                password,
            </if>
            <if test="icon!=null">
                icon,
            </if>
            <if test="email!=null">
                email,
            </if>
            <if test="nickName!=null">
                nick_name,
            </if>
            <if test="note!=null">
                note,
            </if>
            <if test="createTime!=null">
                create_time,
            </if>
            <if test="loginTime!=null">
                login_time
            </if>
        </trim>
        )
        values(
        <trim suffixOverrides=",">
            <if test="username!=null">
                #{username},
            </if>
            <if test="password!=null">
                #{password},
            </if>
            <if test="icon!=null">
                #{icon},
            </if>
            <if test="email!=null">
                #{email},
            </if>
            <if test="nickName!=null">
                #{nickName},
            </if>
            <if test="note!=null">
                #{note},
            </if>
            <if test="createTime!=null">
                #{createTime},
            </if>
            <if test="loginTime!=null">
                #{loginTime}
            </if>
        </trim>
        )
    </insert>
    <update id="updateByPrimaryKeySelective">
        update ums_admin
        <set>
            <if test="username != null">
                username = #{username,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                password = #{password,jdbcType=VARCHAR},
            </if>
            <if test="icon != null">
                icon = #{icon,jdbcType=VARCHAR},
            </if>
            <if test="email != null">
                email = #{email,jdbcType=VARCHAR},
            </if>
            <if test="nickName != null">
                nick_name = #{nickName,jdbcType=VARCHAR},
            </if>
            <if test="note != null">
                note = #{note,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="loginTime != null">
                login_time = #{loginTime,jdbcType=TIMESTAMP},
            </if>
            <if test="status != null">
                status = #{status,jdbcType=INTEGER},
            </if>
        </set>
        where status=1
        and id=#{id}
    </update>
    <select id="selectByNameAndKey" resultType="com.tradoon.bookMall.model.UmsAdmin">
        select id,username,password,icon,email,nick_name,note,create_time,login_time
        from ums_admin
        where status=1
        <if test="username">
            and username=#{username}
        </if>
        <if test="password!=null">
            and password=#{password}
        </if>
        limit 1
    </select>
    <select id="selectByPrimaryKey" resultType="com.tradoon.bookMall.model.UmsAdmin">
        select username,password,icon,email,nick_name,note,create_time,login_time
        from ums_admin
        where status=1
        <if test="id!=null">
            and id=#{id}
        </if>

    </select>
    <select id="selectByKeyWord" resultType="com.tradoon.bookMall.model.UmsAdmin">
        select id,username,password,icon,email,nick_name,note,create_time,login_time
        from ums_admin
        where status=1
        <if test="keyword!=null">
            and username like concat('%',#{keyword},'%')
        </if>
    </select>
</mapper>